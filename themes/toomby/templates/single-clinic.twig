{% extends "base.twig" %}

{% block content %}
{% include "sections/hero.twig" %}
<section class="clinics">
    <div class="row" data-equalizer data-equalize-on="medium">

        {% for course in post.get_field('courses') %}
        <div class="clinic medium-6 column" data-equalizer-watch>
            <div class="title">
                <h3>{{ course.title }}<span>{{ course.duration }}</span></h3>
            </div>
            <div class="details">
                {% if course.image %}
                <img class="small-4 column" src="https://unsplash.it/600/600/?image=1081" alt="{{ clinic.title }}">
                {% endif %}
                <div class="description {% if course.image %} small-8 {% else %} small-12 {% endif %} column">
                    {{ course.description | wpautop }}
                </div>
            </div>
        </div>
        {% endfor %}

    </div>

</section>
{% endblock %}

